{
  "name": "ticket-check-action",
  "description": "Verify that your pull request titles start with a ticket ID",
  "version": "1.3.3",
  "author": "Neo Financial Engineering <engineering@neofinancial.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neofinancial/ticket-check-action"
  },
  "main": "lib/main.js",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production ncc build src/index.ts -o build --minify",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint \"**/*.{ts,js}\""
  },
  "keywords": [
    "actions",
    "github",
    "linter",
    "node"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint"
    ],
    "*.{ts,js,json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@octokit/action": "^3.1.1",
    "@types/node": "^14.11.2",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^6.8.0",
    "eslint-config-neo": "^0.5.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^1.19.1",
    "typescript": "^3.9.7"
  }
}
